---
import { portfolioItems } from '../data/portfolio';

// Sort items by date (newest first)
const sortedItems = portfolioItems.sort((a, b) => {
  if (a.date && b.date) {
    return new Date(b.date).getTime() - new Date(a.date).getTime();
  }
  return 0;
});
---

<section class="portfolio-grid">
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {sortedItems.map((item) => {
      const {
        title = 'Untitled Project',
        description = 'No description available',
        image = '/images/6835450453418620230.jpg',
        tags = [],
        project = null,
        link = null,
        date = null
      } = item;

      return (
        <article class="portfolio-item bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300" data-aos="fade-up">
          <div class="relative overflow-hidden z-0">
            <img 
              src={image} 
              alt={title}
              class="w-full h-48 object-cover hover:scale-105 transition-transform duration-300"
            />
            <div class="absolute w-full h-full pointer-events-none bg-black/20 z-10 top-0 left-0"></div>
            {tags && tags.length > 0 && (
              <div class="absolute bottom-4 right-4 flex flex-wrap gap-2 justify-end z-20">
                {tags.slice(0, 3).map((tag: string) => (
                  <span class="chip">
                    {tag}
                  </span>
                ))}
              </div>
            )}
          </div>
          
          <div class="p-6">
            <h3 class="font-bold mb-2">{title}</h3>
            <p class="text-sm mb-4 line-clamp-3">{description}</p>
            
            {date && (
              <p class="text-xs mb-4">
                {new Date(date + 'T00:00:00').toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })}
              </p>
            )}
            
            <div class="flex flex-col gap-4">
                {project ? (
                  <a 
                    href={project} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="btn btn-primary text-sm"
                  >
                    Open Project
                  </a>
                ) : null}
                {link ? (
                  <a 
                    href={link} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="btn btn-link-external has-icon text-sm self-center"
                  >
                    View Website
                    <i class="fa-solid fa-external-link"></i>
                  </a>
                ) : null}
            </div>
          </div>
        </article>
      );
    })}
  </div>
  
  {sortedItems.length === 0 && (
    <div class="text-center py-12">
      <div class="text-gray-400 text-6xl mb-4">üìÅ</div>
      <h3 class="text-xl font-semibold text-gray-600 mb-2">No Portfolio Items Found</h3>
      <p class="text-gray-500">Add some portfolio items to the <code class="bg-gray-100 px-2 py-1 rounded">src/data/portfolio.ts</code> file to see them here.</p>
    </div>
  )}
</section>
