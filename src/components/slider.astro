<div class="bg-gray-100 h-screen flex justify-center items-center">
    <div 
      x-data="{
        slides: [
          { id: 1, text: 'First' },
          { id: 2, text: 'Second' },
          { id: 3, text: 'Third' }
        ],
        active: 1,
        next() { this.active = this.active === this.slides.length ? 1 : this.active + 1 },
        prev() { this.active = this.active === 1 ? this.slides.length : this.active - 1 }
      }"
      class="relative w-full max-w-2xl"
    >
      <!-- Slides -->
      <template x-for="slide in slides" :key="slide.id">
        <div 
          x-show="active === slide.id" 
          class="h-64 flex items-center justify-center bg-indigo-600 text-white text-3xl font-bold rounded transition-all"
        >
          <span x-text="slide.text"></span>
        </div>
      </template>
  
      <!-- Controls -->
      <button 
        @click="prev" 
        class="absolute top-1/2 left-0 -translate-y-1/2 bg-white text-gray-600 hover:text-indigo-600 rounded-full shadow p-2"
      >
        &#8592;
      </button>
      <button 
        @click="next" 
        class="absolute top-1/2 right-0 -translate-y-1/2 bg-white text-gray-600 hover:text-indigo-600 rounded-full shadow p-2"
      >
        &#8594;
      </button>
  
      <!-- Indicators -->
      <div class="flex justify-center space-x-2 mt-4">
        <template x-for="slide in slides" :key="slide.id">
          <button 
            @click="active = slide.id"
            :class="active === slide.id ? 'bg-indigo-600' : 'bg-gray-400'"
            class="w-3 h-3 rounded-full"
          ></button>
        </template>
      </div>
    </div>
  </div>