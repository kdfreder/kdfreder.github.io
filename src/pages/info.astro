---
import Layout from '../layouts/layout.astro';
import Resume from '../components/resume.astro';

export interface Props {
  currentPage?: string;
}

const { currentPage = 'info' } = Astro.props;
---

<Layout currentPage="info">

	<section id="heroSection" class="h-[25vh] py-[25vh] relative">
		<div class="container mx-auto h-full relative z-10">
			<div class="flex items-center justify-center h-full w-full">
				<div class="rich-text text-center w-[80%] md:w-[60%] lg:w-[40%] mx-auto">
					<h1 class="text-3xl font-bold text-white mb-4" data-aos="fade-down">Info</h1>
					<p class="text-sm text-white/80 mb-6" data-aos="fade-up" data-aos-delay="100">Here you can find some information about me.</p>
				</div>
			</div>
		</div>
	</section>

	<section class="py-8 lg:py-16 bg-white">
		<div class="container mx-auto">
			<Resume />
		</div>
	</section>
</Layout>