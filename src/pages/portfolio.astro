---
import Layout from '../layouts/layout.astro';
import Portfolio from '../components/portfolio.astro';

export interface Props {
  currentPage?: string;
}

const { currentPage = 'portfolio' } = Astro.props;
---

<Layout currentPage="portfolio">
  <section id="heroSection" class="h-screen relative">
		<div class="container mx-auto h-full relative z-10">

			<div class="w-3/5 h-3/5 absolute top-[50%] translate-y-[-50%] left-[50%] translate-x-[-50%] z-10">
				<div class="text-3xl font-bold text-white mb-4 z-20 absolute right-0 mb-0">
					<h1 class="text-3xl font-bold text-white mb-4 z-20 absolute right-0 mb-0 hidden">Portfolio</h1>

					<div class="font-bold text-3xl [text-wrap:balance] bg-clip-text"><span class="text-sand">My </span>
						<span class="inline-flex flex-col h-[calc(theme(fontSize.3xl)*theme(lineHeight.tight))] overflow-hidden">
							<ul class="block animate-text-slide leading-tight">
								<li>Portfolio</li>
								<li>Work</li>
								<li>Projects</li>
								<li>Examples</li>
								<li>Experience</li>
								<li aria-hidden="true">Portfolio</li>
							</ul>
						</span>
					</div>

				</div>
				<div class="rotate-[-3deg] h-full w-[90%] mx-auto shadow-xl aspect-square relative z-10">
					<div class="w-full h-full absolute top-0 left-0 bg-black/80 z-10"></div>
					<img src="../images/lv_2024.jpg" alt="Hero Image" class="w-full h-full object-cover object-top">
				</div>
        
			</div>

			<div class="flex flex-col items-center justify-center h-full w-full relative z-20">
				<div class="rich-text text-center w-[80%] md:w-[60%] lg:w-[40%] mx-auto">
					<p class="text-white/80 mb-6">Here are some of the projects I've worked on. Varying in scope and complexity, these projects have been a great learning experience. Solving problems and building experiences for clients and myself.</p>
				</div>
			</div>

		</div>
	</section>

  <section class="py-8 lg:py-16 bg-white">
    <div class="container mx-auto">
      <Portfolio />
    </div>
  </section>
</Layout>